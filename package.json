{
  "name": "ts-fonts",
  "version": "1.1.3",
  "description": "A tool to create dynamic colors by interpolating multiple colors",
  "keywords": [],
  "homepage": "https://github.com/etienne-dldc/ts-fonts#readme",
  "bugs": {
    "url": "https://github.com/etienne-dldc/ts-fonts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/etienne-dldc/ts-fonts.git"
  },
  "license": "MIT",
  "author": "Etienne Dldc",
  "main": "dist/index.js",
  "module": "dist/ts-fonts.esm.js",
  "typings": "dist/index.d.ts",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdx build --target web",
    "lint": "tsdx lint src test",
    "pub": "yarn build && np",
    "start": "tsdx watch",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "husky": "^4.3.8",
    "np": "^7.2.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "react": {
        "version": "999.999.999"
      }
    }
  }
}
